<div class='movie__container'>
  <div class='movie__img'>
    <img
      src='https://image.tmdb.org/t/p/w780{{poster_path}}'
      alt={{title}}
      class='movie__poster'
      onerror="this.onerror=null;this.src='https://upload.wikimedia.org/wikipedia/commons/thumb/6/65/No-Image-Placeholder.svg/488px-No-Image-Placeholder.svg.png';"
    />

  </div>
  <div class='movie__text'>
    <h3 class='movie__name'>{{original_title}}</h3>
    <div class='movie__info'>
      <table class='movie__table table'>
        <tr class='table__row'>
          <td class='table__data table__data--title'>Vote / Votes</td>
          <td class='table__data table__data--info'><span
              class='table__number table__number--orange'
            >{{truncRate vote_average}}</span>/
            <span
              class='table__number table__number--grey'
            >{{vote_count}}</span>
          </td>
        </tr>
        <tr class='table__row'>
          <td class='table__data table__data--title'>Popularity</td>
          <td class='table__data table__data--info'>{{popularity}}</td>
        </tr>
        <tr class='table__row'>
          <td class='table__data table__data--title'>Original Title</td>
          <td
            class='table__data table__data--info table__data--uppercase'
          >{{original_title}}</td>
        </tr>
        <tr class='table__row'>
          <td class='table__data table__data--title'>Genre</td>
          <td class='table__data table__data--info'>{{joinGenres
              genre_ids
            }}</td>
        </tr>
      </table>
    </div>
    <h4 class='movie__about'>About</h4>
    <p class='movie__film-about'>{{checkOverviewForNull overview}}</p>

    <div class='movie__buttons movie-btn'>
      <button
        type='button'
        class='movie-btn__btn movie-btn__btn--watched'
        data-idFilm='{{id}}'
        data-btn='watched'
      >Add to watched</button>
      <button
        type='button'
        class='movie-btn__btn movie-btn__btn--queue'
        data-idFilm='{{id}}'
        data-btn='queue'
      >Add to queue</button>
    </div>
  </div>
</div>