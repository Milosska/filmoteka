{{! Ярослав Михайлов }}
{{#each this}}
<li class="movie-card__item">
    <img class="movie-card__img" 
        src="{{addBaseUrl poster_path}}"
        alt="Poster {{title}}" 
        width="100%" 
        data-id="{{id}}"
        loading="lazy"
        onerror="this.onerror=null;this.src='https://upload.wikimedia.org/wikipedia/commons/thumb/6/65/No-Image-Placeholder.svg/488px-No-Image-Placeholder.svg.png';" />
    <h2 class="movie-card__title">{{title}}</h2>
    <p class="movie-card__text">
        <span class="movie-card__genre">{{getGenres genre_ids}}</span>
        <span class="movie-card__year">{{takeYearFromDate release_date}}</span>>
        <span class="movie-card__vote_average">{{vote_average}}</span>>
    </p>
</li>
{{/each}}